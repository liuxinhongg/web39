/**index.wxss**/
.shopSort{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 48rpx;
  color: #f00;
  font-weight: bold;
}
.sortbox{
  width: 90%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  box-shadow: 0px 0px 10rpx #cccc;
  margin: 40rpx;
}
.shop_item{
  width: 300rpx;
  height: 400rpx;
  margin: 20rpx 10rpx 10rpx 0rpx;
}
.goods_img{
  width: 300rpx;
  height: 300rpx;
}
.title{
  font-size: 36rpx;
  font-weight: bold;
  color: #f00;
  text-align: center;
}